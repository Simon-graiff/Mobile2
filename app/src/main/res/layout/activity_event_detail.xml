<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dhbw.mobile2.EventDetailActivity">



            <TextView
                android:id="@+id/detail_title_static"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_title"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_title_dynamic"
                android:text="@string/detail_title"
                android:layout_toRightOf="@id/detail_title_static"
                />
            <TextView
                android:id="@+id/detail_category_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_category"
                android:layout_below="@id/detail_title_dynamic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_category_dynamic"
                android:text="@string/detail_category"
                android:layout_below="@id/detail_title_dynamic"
                android:layout_toRightOf="@id/detail_category_static"/>


</RelativeLayout>
